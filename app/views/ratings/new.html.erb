<h1>New Rating</h1>

<%= form_for [@movie, @rating], url: movie_ratings_path(@movie) do |f| %>
  <%= f.label :score %>
  <%= f.number_field :score, min: 1, max: 10 %>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', @movie %>
<%= link_to 'Show Ratings', movie_ratings_path(@movie), class: 'button' %>


